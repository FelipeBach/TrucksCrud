        <form asp-action="AddOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-6">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
